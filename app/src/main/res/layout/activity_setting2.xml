<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Setting2Activity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#3F51B5"
        android:gravity="center"
        android:text="상미고 시간표 설정"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:background="@drawable/sss_timemain_down_box_hafe"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="상미고 시간표 설정입니다."
            android:layout_weight="1"
            android:id="@+id/Setting_pref_text1" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/Setting_pref_text2" />
    </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:orientation="horizontal"
          android:background="@drawable/sss_timemain_down_box_hafe"
          >
          <Button android:id="@+id/BTsenting_priference_notification"
              android:focusable="true"
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="급식알림"/>

          <Button android:id="@+id/BTsenting_priference_save"
              android:focusable="true"
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="저  장"/>

          <Button android:id="@+id/BTsenting_priference_cancel"
              android:focusable="true"
              android:layout_margin="10dp"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:text="취  소"/>

      </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/sss_timemain_down_box_hafe"
        android:orientation="vertical">
        <TextView
            android:text="선생님 성함을 클릭하셔서 선생님을 선택하세요."
            android:layout_weight="2"
            android:textSize="15dp"
            android:textColor="#03A9F4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Spinner
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/SP_pref_teachername"
            android:entries="@array/teacher_name"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/sss_timemain_down_box_hafe"
        android:orientation="vertical">
        <TextView
            android:text="학년, 반을 클릭하셔서 학년과 반을 선택하세요."
            android:layout_weight="2"
            android:textSize="15dp"
            android:textColor="#4CAF50"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >
                    <Spinner
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:id="@+id/SP_pref_yearhak"
                        android:entries="@array/yearhak"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <Spinner
                        android:gravity="center"
                        android:layout_margin="5dp"
                        android:textSize="25dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/SP_pref_classban"
                        android:entries="@array/classban"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/sss_timemain_down_box_hafe"
        android:orientation="vertical">
        <TextView
            android:text="위젯 표시종류를 클릭하셔서 위젯 표시 종류를 선택하세요"
            android:textSize="15dp"
            android:layout_weight="2"
            android:textColor="#4CAF50"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <Spinner
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/SP_pref_widget"
            android:entries="@array/list_widget"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/sss_timemain_down_box_hafe"
        android:orientation="vertical">
        <TextView
            android:text="아침마다 점심 메뉴를 알려 드립니다."
            android:layout_weight="2"
            android:textSize="15dp"
            android:textColor="#4CAF50"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <CheckBox
            android:text="점심 메유 알람 설정~!"
            android:checked="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/CHECKBOX_pref_alarm"
             />

    </LinearLayout>



</LinearLayout>